<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Coding Standards for WP" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/PHPCSStandards/PHP_CodeSniffer/master/phpcs.xsd">
	<file>.</file>

  <arg name="colors"/>
	<arg name="basepath" value="."/>
	<arg name="parallel" value="8"/>
  <!-- <arg name="report" value="summary"/> -->

  <config name="testVersion" value="8.3-"/>
  <config name="minimum_wp_version" value="6.0"/>

	<rule ref="WordPress-Extra"></rule>

	<rule ref="WordPress.DateTime.RestrictedFunctions.date">
		<exclude name="WordPress.DateTime.RestrictedFunctions.date"/>
	</rule>


	<rule ref="Generic.Commenting.Todo"/>

	<rule ref="PHPCompatibilityWP">
		<include-pattern>*\.php$</include-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="wp-standards"/>
			</property>
		</properties>
	</rule>

  <exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>
	<exclude-pattern>/src/*</exclude-pattern>
	<exclude-pattern>/css/*</exclude-pattern>
</ruleset>